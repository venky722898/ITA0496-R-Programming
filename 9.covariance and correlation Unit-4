advertising <- c(1000, 1500, 2000, 2500, 3000, 3500, 4000, 4500, 5000, 5500)
sales <- c(15000, 18000, 21000, 24000, 27000, 30000, 33000, 36000, 39000, 42000)
covariance <- cov(advertising, sales)
correlation <- cor(advertising, sales)

cat("Covariance between advertising and sales:", covariance, "\n")
cat("Correlation between advertising and sales:", correlation, "\n")
